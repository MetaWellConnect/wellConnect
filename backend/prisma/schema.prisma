generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  name      String
  email     String @unique
  password  String
}

model Medication {
  id                Int @id @default(autoincrement())
  name              String
  weight            Int
  time_of_last_dose DateTime
  time_of_next_dose DateTime
  description       String
  photo_url         String
}
